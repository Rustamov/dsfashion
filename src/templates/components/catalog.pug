							+e.SPAN.color
								+e.I.color-part(style="background:#dccf9d")
								+e.I.color-part(style="background:#2b4860")      

				+e.SPAN.props-item
					+e.SPAN.props-name Состав:
					+e.SPAN.props-value 100% вискоза



