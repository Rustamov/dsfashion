mixin catalogListingItem(name, image, width, height)
	+b.A.catalog-item(href="#")&attributes(attributes)
		+e.SPAN.img-wrap
			+e.IMG.img(src=image alt=name width=262 height=240)
		+e.SPAN.main
			+e.SPAN.title= name
			+e.SPAN.props
				+e.SPAN.props-item
					+e.SPAN.props-name Артикул:
					+e.SPAN.props-value 12345678

				+e.SPAN.props-item
