mixin categoryItem(name, image, width, height)
	+b.A.category-item(href="#")&attributes(attributes)
		+e.SPAN.img-wrap
			+e.IMG.img(src=image alt=name width=width height=height)
		+e.SPAN.title= name

mixin categorySlider()
	+b.category-block&attributes(attributes)
		+e.top
			+e.top-row.row
				+e.top-col-title.col-auto
					+dualTitle('h1', 'Онлайн', 'шоурум', '--theme-yellow-white')
					
				+e.top-col-controls.col-auto
					+e.controls
						+e.controls-left
							+buttonArrow('left', 'js-category-block-slider-prev')
						+e.controls-right
							+buttonArrow('right', 'js-category-block-slider-next')

		+e.slider-wrap
			+e.slider.js-category-block-slider
				+e.slider-item
					+categoryItem('Твил', 'img/content/category-0.jpg', 204, 240)
				+e.slider-item
					+categoryItem('Велюр', 'img/content/category-1.jpg', 204, 240)
				+e.slider-item
					+categoryItem('Велюр', 'img/content/category-2.jpg', 204, 240)
				+e.slider-item
					+categoryItem('Твид', 'img/content/category-3.jpg', 204, 240)
				+e.slider-item
					+categoryItem('Кремплен', 'img/content/category-4.jpg', 204, 240)
				+e.slider-item
					+categoryItem('Твид', 'img/content/category-3.jpg', 204, 240)
				+e.slider-item
					+categoryItem('Велюр', 'img/content/category-2.jpg', 204, 240)
				+e.slider-item
					+categoryItem('Велюр', 'img/content/category-1.jpg', 204, 240)


