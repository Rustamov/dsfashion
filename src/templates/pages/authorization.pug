extends ../layouts/default
include ../helpers/mixins

block variables
	- const title = "authorization"
	- const bodyClass = "body--bg-top-small"

block content
	main.main.main--pt-40
		+b.p-def
			.container
				.breadcrumbs-block
					+breadcrumbs([], 'Авторизация и регистрация')

				+b.page-title
					+e.H1.__text Авторизация
					+e.A.__link(href="registration.html") Регистрация

				+b.SECTION.authorization
					+e.form
						form.js-validate(action="#" autocomplete="off")
							+e.form-row.row
								+e.form-col.--field.col-12.col-lg-4
									label.input-text.input-text--label
										span.input-text__label 
											| Логин 
											i.imp-sign *
										input.input-text__field(type="text" name="Name" required="")

								+e.form-col.--field.col-12.col-lg-4
									label.input-text.input-text--label
										span.input-text__label 
											| Пароль
											i.imp-sign *
										input.input-text__field(type="password" name="password" required="")
								
								+e.form-col.--submit.col-12.col-lg-3
									+buttonRedL('Войти', 'button', 'l')(type="submit")

								+e.form-col.--agree.col-12.col-lg-4
									+e.A.form-link.link.link--theme-red(href="#") Напомнить пароль

								+e.form-col.col-12.col-lg-5
									+e.SPAN.form-required-mesage
										i.imp-sign * 
										| — обязательно для заполнения
			
								
										

				+sectionInf()

				+sectionWhyUs()

