extends ../layouts/default
include ../helpers/mixins

block variables
	- const title = "catalog_level1"

block content
	main.main
		+b.p-catalog
			.container
				+e.SECTION.category-slider
					+categorySlider

				.breadcrumbs-block
					+breadcrumbs([], 'Каталог')

				+e.SECTION.main
					+e.top
						.row
							+e.main-col-nav.col-12.col-lg-3
								+catalogNav('')
							+e.main-col-items.col-12.col-lg-9
								+e.H1.title Каталог

								+e.items
									+e.items-row.row
										+e.items-col.col-6.col-md-4
											+catalogListingCategory('icon', 'Женская коллекция', 'img/content/catalog-category-0.png')
										+e.items-col.col-6.col-md-4
											+catalogListingCategory('icon', 'Мужская коллекция', 'img/content/catalog-category-1.png')
										+e.items-col.col-6.col-md-4
											+catalogListingCategory('icon', 'Фурнитура', 'img/content/catalog-category-2.png')
										

				+sectionInf()

				+sectionWhyUs()
